@model IEnumerable<MyStorage.Models.Product>
@{
    ViewBag.Title = "MyStorage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="jumbotron">
    <h1>My Storage</h1>
</div>

<h2>Products</h2>

<table class="table table-striped table-hover ">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Category</th>
            <th>Manufacturer</th>
            <th>Supplier</th>
            <th>Price</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@Html.ActionLink(product.Name, "Index", "Product", new { id = product.Id }, null)</td>
                <td>@product.Description</td>
                <td>@product.Category</td>
                <td>@product.Manufacturer</td>
                <td>@product.Supplier</td>
                <td>@product.Price RSD</td>
            </tr>
        }
    </tbody>
</table>